<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:id="@+id/toot"
    tools:context=".news.news_list">


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_news"
        android:text="سی"
        />
    <ProgressBar
        android:layout_width="100dp"

        android:layout_height="100dp"
       android:id="@+id/progress_news"
        android:layout_gravity="center">

    </ProgressBar><TextView
    android:textColor="@color/colorPrimary"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/progress_news_edt"
    android:text="just sec"
    android:layout_gravity="center"/>

    <ir.tapsell.sdk.bannerads.TapsellBannerView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tapsell_banner_type="banner_320x50"
        android:layout_gravity="bottom|center"
        app:tapsell_zone_id="600c173b8debc40001299243" />
</FrameLayout>